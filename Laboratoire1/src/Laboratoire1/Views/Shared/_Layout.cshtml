@{ 
    DateTime dateTime = DateTime.Now;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap-4.0.0-dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="https://unpkg.com/material-components-web@latest/dist/material-components-web.min.css" rel="stylesheet">
    </environment>
    <environment exclude="Development">
        <link href="~/lib/bootstrap-4.0.0-dist/css/bootstrap.css" rel="stylesheet"
              asp-fallback-href="~/lib/bootstrap-4.0.0-dist/css/bootstrap.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="https://unpkg.com/material-components-web@latest/dist/material-components-web.min.css" rel="stylesheet">
    </environment>
</head>
<body>
    <div class="banner">
        <div class="widget-dark">
            <time data-date="@dateTime"></time>
            @dateTime.ToString("dddd, dd MMMM yyyy")
            <br>
            @dateTime.ToString("h:mm tt")
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a asp-area="" asp-controller="Evaluation" asp-action="Accueil" class="navbar-brand">Laboratoire1</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link active" asp-controller="Evaluation" asp-action="Accueil">Accueil <span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link" asp-controller="Evaluation" asp-action="List">Liste évaluation</a>
                <a class="nav-item nav-link" asp-controller="Mail" asp-action="Index">Contactez nous</a>
            </div>
        </div>
    </nav>
    <div class="main-content">
        @RenderBody()
    </div>
    <footer class="container">
        <hr />
        <p>&copy; 2019 - Yan Ha Routhier-Chevrier</p>
    </footer>

    <environment include="Development">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="~/lib/bootstrap-4.0.0-dist/js/bootstrap.js"></script>
        <script src="~/lib/bootstrap-4.0.0-dist/js/bootstrap.bundle.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="https://unpkg.com/material-components-web@latest/dist/material-components-web.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="~/lib/bootstrap-4.0.0-dist/js/bootstrap.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/bootstrap-4.0.0-dist/js/bootstrap.bundle.js"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
        <script src="https://unpkg.com/material-components-web@latest/dist/material-components-web.min.js"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
